[settings]
os=Linux
arch=armv8
compiler=clang
compiler.version=17
compiler.libcxx=libstdc++11
build_type=Release

[conf]
tools.build:compiler_executables={"c":"clang","cpp":"clang++","ar":"llvm-ar","ranlib":"llvm-ranlib"}
tools.build:cflags=--target=aarch64-linux-gnu --sysroot=/usr/aarch64-linux-gnu
tools.build:cxxflags=--target=aarch64-linux-gnu --sysroot=/usr/aarch64-linux-gnu
