[settings]
os=Linux
arch=armv8
compiler=clang
compiler.version=15
compiler.libcxx=libstdc++11
build_type=Release

[conf]
tools.build:compiler_executables={"c":"clang","cpp":"clang++"}
tools.build:verbosity=quiet
tools.compilation:verbosity=quiet
tools.gnu:make_args=["-s"]
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:cflags=["--target=aarch64-linux-gnu", "-I/usr/aarch64-linux-gnu/include"]
tools.build:cxxflags=["--target=aarch64-linux-gnu", "-I/usr/aarch64-linux-gnu/include"]
tools.build:sharedlinkflags=["--target=aarch64-linux-gnu"]
tools.build:exelinkflags=["--target=aarch64-linux-gnu"]
